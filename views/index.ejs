<body>
    <div id="app">
    <h1>Chat</h1>

    <!-- Contenedor de mensajes -->
    <ul id="message_container">
        <li v-for="m in messages">
            {{m}}
        </li>

    </ul>

    <!-- Formulario para enviar mensajes -->
    <form id="form_message" action="">
        <input id="input_message" type="text" v-model="message">
        <button type ="button" id="button_send_message" @click="sendMessage">Send</button>
    </form>
</div>

